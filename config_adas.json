{
    "performance": {
        "skip_frames": 3,
        "confidence_threshold": 0.2,
        "max_risks_buffer": 3,
        "fps_update_interval": 20,
        "ocr_confidence_threshold": 0.5,
        "traffic_light_min_area": 100
    },
    "zones": {
        "proximity": {
            "x_min": 0.2,
            "x_max": 0.8,
            "y_min": 0.2,
            "y_max": 0.8,
            "description": "Zona de proximidade otimizada para HD - mais precisa"
        }
    },
    "risk_config": {
        "car": {
            "area_ratio_high": 0.15,
            "area_ratio_mid": 0.08,
            "description": "Carros - alertas de proximidade otimizados para HD"
        },
        "truck": {
            "area_ratio_high": 0.9,
            "area_ratio_mid": 0.9,
            "description": "Caminhões - alertas de proximidade"
        },
        "bus": {
            "area_ratio_high": 0.9,
            "area_ratio_mid": 0.9,
            "description": "Ônibus - alertas de proximidade"
        },
        "motorcycle": {
            "area_ratio_high": 0.5,
            "area_ratio_mid": 0.05,
            "description": "Motos - alertas de proximidade"
        },
        "person": {
            "area_ratio_high": 0.08,
            "area_ratio_mid": 0.04,
            "description": "Pedestres - alertas de proximidade"
        },
        "license plate": {
            "area_ratio_high": 0.02,
            "area_ratio_mid": 0.01,
            "description": "Placas - reconhecimento OCR"
        }
    },
    "target_classes": [
        "car",
        "truck", 
        "bus",
        "motorcycle",
        "stop sign",
        "traffic light",
        "person",
        "license plate"
    ],
    "features": {
        "lane_detection": false,
        "proximity_warnings": true,
        "audio_alerts": true,
        "visual_overlays": true,
        "windshield_only": true,
        "license_plate_recognition": true,
        "traffic_light_state_detection": true
    },
    "alerts": {
        "beep_frequency": 1000,
        "beep_duration": 120,
        "debounce_time": 1.0,
        "collision_distance_critical": 2.0,
        "red_light_alert": true,
        "yellow_light_warning": true
    },
    "ocr": {
        "languages": ["pt", "en"],
        "gpu_enabled": true,
        "min_confidence": 0.5,
        "preprocess_enabled": true
    },
    "traffic_light": {
        "red_threshold": 0.4,
        "yellow_threshold": 0.3,
        "green_threshold": 0.4,
        "min_brightness": 50,
        "state_persistence": 5,
        "state_detection_enabled": true
    },
    "pedestrian": {
        "full_screen_detection": true,
        "movement_filter_enabled": true,
        "min_confidence": 0.3,
        "alert_distance": 5.0
    },
    "license_plate": {
        "temporary_display_duration": 3,
        "enhanced_ocr": true,
        "min_confidence": 0.6
    },
    "traffic_sign": {
        "enhanced_recognition": true,
        "additional_types": ["yield", "no_entry", "one_way"],
        "temporary_display_duration": 5
    },
    "hd_settings": {
        "focal_length_hd": 600,
        "ocr_resize_factor": 2.0,
        "contrast_alpha": 1.2,
        "brightness_beta": 20,
        "sharpen_kernel": [[0, -1, 0], [-1, 5, -1], [0, -1, 0]],
        "description": "Parâmetros otimizados para vídeo HD"
    }
}
